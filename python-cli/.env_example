# OpenAI API Key (for voice_transcriber_openai.py)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your-api-key-here

# Fireworks AI API Key (for voice_transcriber_fireworks.py)
# Get your API key from: https://fireworks.ai/account/api-keys
FIREWORKS_API_KEY=your-api-key-here
# Hotkey to start/stop recording
# Examples: f9, f10, ctrl+shift+v, alt+r
HOTKEY=f9

# Language for transcription
# Use 'en' for English, 'es' for Spanish, 'fr' for French, etc.
# Use 'auto' for automatic language detection
LANGUAGE=en

# Maximum recording time in seconds
MAX_RECORDING_TIME=300

# Audio settings (optimized for speed)
# 16000 Hz is Whisper's native sample rate, 4096 chunks are more efficient
SAMPLE_RATE=16000
CHUNK_SIZE=4096

# Text processing settings
REMOVE_FILLER_WORDS=true
CUSTOM_FILLER_WORDS=basically,literally,actually

# Typing settings (optimized for speed)
# Lower values = faster typing, higher values = slower typing
TYPING_INTERVAL=0.005

# Memory limit in MB (default: 100)
MAX_MEMORY_MB=100

# Voice Activity Detection (VAD) settings
# Enable VAD to reduce API calls by skipping silence (30-60% improvement)
VAD_ENABLED=true
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION=0.1
VAD_MAX_SILENCE_DURATION=2.0

# Advanced audio preprocessing
ENABLE_PREPROCESSING=true

# Performance Settings
ENABLE_DEBUG_LOGGING=false  # Set to true for detailed logs (slower performance)
PERFORMANCE_MODE=true       # Minimal logging for maximum speed